@page "/"
@using TorrentGrease.Shared
@using TorrentGrease.Shared.ServiceContracts
@using ProtoBuf.Grpc.Client
@using Grpc.Net.Client
@inject HttpClient Http

<h1>Policies</h1>

@if (policies == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table" id="policies-table">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var policy in policies)
            {
                <tr>
                    <td>@policy.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    IEnumerable<Policy> policies;

    protected override async Task OnInitializedAsync()
    {
        GrpcClientFactory.AllowUnencryptedHttp2 = true;
        using (var channel = GrpcChannel.ForAddress("http://localhost:5657"))
        {
            var policyService = channel.CreateGrpcService<IPolicyService>();
            policies = await policyService.GetAllPolicies();
        }

        //policies = await Http.GetJsonAsync<IEnumerable<Policy>>("api/Policy/All");
    }
}
