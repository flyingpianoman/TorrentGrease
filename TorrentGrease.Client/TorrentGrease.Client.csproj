<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <!--<OutputType>Exe</OutputType>
    <LangVersion>7.3</LangVersion>-->
    <RazorLangVersion>3.0</RazorLangVersion>
    <!--<BlazorLinkOnBuild>false</BlazorLinkOnBuild> --><!-- linker has some issues for now https://github.com/mono/mono/issues/10653 -->
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Blazorise.Bootstrap" Version="0.8.7.2" />
    <PackageReference Include="Blazorise.Icons.FontAwesome" Version="0.8.7.2" />
    <PackageReference Include="Microsoft.AspNetCore.Blazor" Version="3.1.0-preview4.19579.2" />
    <PackageReference Include="Microsoft.AspNetCore.Blazor.Build" Version="3.1.0-preview4.19579.2" PrivateAssets="all" />
    <PackageReference Include="Microsoft.AspNetCore.Blazor.DevServer" Version="3.1.0-preview4.19579.2" PrivateAssets="all" />
    <PackageReference Include="Microsoft.AspNetCore.Blazor.HttpClient" Version="3.1.0-preview4.19579.2" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Authorization" Version="3.1.0" />
    <PackageReference Include="Grpc.Net.Client" Version="2.25.0" />
    <PackageReference Include="protobuf-net.Grpc" Version="1.0.13" />
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="2.9.7">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="System.Private.ServiceModel" Version="4.6.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TorrentGrease.GrpcClient\TorrentGrease.GrpcClient.csproj" />
    <ProjectReference Include="..\TorrentGrease.Shared\TorrentGrease.Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="dist_wwwroot\js\jquery\" />
    <Folder Include="dist_wwwroot\js\bootstrap\" />
    <Folder Include="dist_wwwroot\js\popper\" />
  </ItemGroup>

  <!--Fix for https://github.com/aspnet/AspNetCore/issues/9704 -->
  <Target Name="FixBlazorConfigForDockerDebug" AfterTargets="GenerateBlazorMetadataFile" Condition="'$(Configuration)' == 'Debug'">
    <WriteLinesToFile File="$(BlazorMetadataFilePath)" Lines="/TorrentGrease.Client/TorrentGrease.Client.csproj" Overwrite="true" Encoding="Unicode" />
    <WriteLinesToFile File="$(BlazorMetadataFilePath)" Lines="/TorrentGrease.Client/bin/Debug/$(TargetFramework)/$(AssemblyName).dll" Overwrite="false" Encoding="Unicode" />
    <WriteLinesToFile File="$(BlazorMetadataFilePath)" Condition="'$(BlazorRebuildOnFileChange)'=='true'" Lines="autorebuild:true" Overwrite="false" Encoding="Unicode" />
    <WriteLinesToFile File="$(BlazorMetadataFilePath)" Condition="'$(BlazorEnableDebugging)'=='true'" Lines="debug:true" Overwrite="false" Encoding="Unicode" />
  </Target>

</Project>
